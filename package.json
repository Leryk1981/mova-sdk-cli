{
  "name": "@leryk1981/mova-sdk-cli",
  "version": "0.1.0",
  "description": "Command‑line interface for MOVA‑Agent – scaffolding, validation and execution of MOVA plans",
  "main": "dist/cli.js",
  "bin": {
    "mova": "./bin/mova-cli.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "ci": "npm run lint && npm test && npm run build",
    "release:check": "npm run ci && npm pack"
  },
  "dependencies": {
    "@leryk1981/mova-spec": "^4.1.1",
    "commander": "^12.0.0",
    "chalk": "^4.1.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/node-fetch": "^3.0.3",
    "ts-jest": "^29.2.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "keywords": [
    "mova",
    "cli",
    "sdk",
    "agent",
    "json-schema",
    "validation"
  ],
  "author": "Sergii Miasoiedov",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leryk1981/mova_agent.git"
  },
  "bugs": {
    "url": "https://github.com/Leryk1981/mova_agent/issues"
  },
  "homepage": "https://github.com/Leryk1981/mova_agent#readme"
}
